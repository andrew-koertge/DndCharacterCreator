@model IEnumerable<DndCharacterCreator.Models.SkillModels.SkillListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SkillId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GovAttribute)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SkillId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GovAttribute)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SkillId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SkillId })
        </td>
    </tr>
}

</table>
